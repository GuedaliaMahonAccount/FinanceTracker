<Window x:Class="Finance.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Saisie"
        Height="220"
        Width="450"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

	<Window.Resources>
		<SolidColorBrush x:Key="PrimaryColor" Color="#2563EB"/>
		<SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
		<SolidColorBrush x:Key="TextPrimary" Color="#1F2937"/>
		<SolidColorBrush x:Key="TextSecondary" Color="#6B7280"/>
		<SolidColorBrush x:Key="InputBackground" Color="#F9FAFB"/>
		<SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>
	</Window.Resources>

	<Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="24">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<!-- Message -->
			<TextBlock x:Name="PromptText"
                       Grid.Row="0"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,0,0,16"
                       TextWrapping="Wrap"/>

			<!-- Input -->
			<Border Grid.Row="1"
                    Background="{StaticResource InputBackground}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,0,20"
                    VerticalAlignment="Top">
				<TextBox x:Name="ResponseTextBox"
                         Padding="12,10"
                         FontSize="13"
                         Background="Transparent"
                         BorderThickness="0"/>
			</Border>

			<!-- Boutons -->
			<StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
				<Border CornerRadius="4" Margin="0,0,12,0">
					<Button Content="Annuler"
                            Padding="16,10"
                            FontSize="12"
                            Background="#F3F4F6"
                            Foreground="{StaticResource TextPrimary}"
                            BorderThickness="0"
                            Width="100"
                            Click="CancelButton_Click" />
				</Border>
				<Border CornerRadius="4">
					<Button Content="OK"
                            Padding="16,10"
                            FontSize="12"
                            FontWeight="Bold"
                            Background="{StaticResource PrimaryColor}"
                            Foreground="White"
                            BorderThickness="0"
                            Width="100"
                            Click="OkButton_Click" />
				</Border>
			</StackPanel>
		</Grid>
	</Border>
</Window>